/* Disqus */
#disqus_thread
  margin-bottom remify(40px)
#disqus_go_to_comment
  position fixed
  left: remify(-100px)
  top remify(300px)
  &:hover
    background-color $theme-background
    color $theme-color
  i
    font-size 20px
#go_to_top
  display none
  position fixed
  left remify(-100px)
  bottom remify(150px)
  &:hover
    background-color $theme-background
    color $theme-color
  i
    font-size 20px

@media only screen and (max-width: 980px)
  #disqus_go_to_comment
    font-size 0
    right remify(-20px)
    i
      font-size 20px

@media only screen and (max-width: 820px)
  #disqus_go_to_comment
    display none
  #go_to_top
    display none
    font-size 0


/* normal style */
.post-tags,
.post-info,
.post-words
  font-size remify(14px)
  font-style italic
  text-align center
.post-info
  margin-bottom remify(5px)
  .info
    padding 0 remify(8px)
    border-right 1px dotted $theme-dotted-seperator
    &:last-child
      border-right none
  .categories a
    padding remify(2px) remify(4px)
    border-radius remify(2px)
.post-tags
  font-style italic
  > a
    display inline-block
    padding 0 remify(4px)
    margin-right remify(2px)
    border-radius remify(2px)
.post-words
  text-indent 2em
  font-size remify(13px)
  font-style italic
  .post-word
    float left
  .post-read
    float right
.post-content
  padding-top remify(40px)
  padding-bottom @padding-top
  font-size remify(15px)

/* mobile style */
@media only screen and (max-width: 414px)
  .post-tags,
  .post-info
    font-size remify(12px)
    .info
      padding 0 remify(5px)
    .time
      display none
  .post-content
    font-size remify(12.5px)

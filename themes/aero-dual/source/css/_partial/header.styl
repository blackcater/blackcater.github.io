/* normal style */
.site-header
  padding remify(40px) 0
  border-bottom 1px solid $theme-seperator
  margin-bottom remify(30px)
  &.header-background
    position relative
    border-bottom 0
    background-color gray
    background-position center center
    background-attachment scroll
    -webkit-background-size cover
    -moz-background-size cover
    background-size cover
    -o-background-size cover
  .page-title
    color $theme-color
    text-align center
    text-shadow 1px 1px 2px $color-black
    &.with-background-image
      color $color-white
      padding remify(50px) 0
    .title
      font-size remify(36px)

.site-menu
  text-align center
  margin-top remify(10px)
  text-shadow 3px 3px 3px $color-black
  ul
    margin 0 auto
    padding 0
    > li
      display inline-block
      margin-right remify(10px)
      &:last-child
        margin-right 0
      > a
        padding remify(3px) remify(10px)
        border-radius remify(2px)
  &.with-background-image
    a
      color $color-white

/* show */
.snow
  font-family Androgyne
  background none
  height 100%
  left: 0
  position absolute
  top 0
  width 100%
  background-image url('/img/s1.png'), url('/img/s2.png'), url('/img/s3.png')
  animation SnowAnimation 10s linear infinite
  -webkit-animation SnowAnimation 10s linear infinite
  -moz-animation SnowAnimation 10s linear infinite
  -ms-animation SnowAnimation 10s linear infinite


@keyframes SnowAnimation
  0%
    background-position 0px 0px, 0px 0px, 0px 0px
  50%
    background-position 500px 500px, 100px 200px, -100px 150px
  100%
    background-position 500px 1000px, 200px 400px, -100px 300px

@-moz-keyframes SnowAnimation
  0%
    background-position 0px 0px, 0px 0px, 0px 0px
  50%
    background-position 500px 500px, 100px 200px, -100px 150px
  100%
    background-position 500px 1000px, 200px 400px, -100px 300px

@-webkit-keyframes SnowAnimation
  0%
    background-position 0px 0px, 0px 0px, 0px 0px
  50%
    background-position 500px 500px, 100px 200px, -100px 150px
  100%
    background-position 500px 1000px, 200px 400px, -100px 300px

@-ms-keyframes SnowAnimation
  0%
    background-position 0px 0px, 0px 0px, 0px 0px
  50%
    background-position 500px 500px, 100px 200px, -100px 150px
  100%
    background-position 500px 1000px, 200px 400px, -100px 300px


/* mobile style */
@media only screen and (max-width: 414px)
  .site-header
    .page-title
      &.with-background-image
        padding remify(30px) 0
      .title
        font-size remify(22px)
  .site-menu
    font-size remify(16px)
    ul li
      margin-right 0
      > a
        padding remify(3px) remify(6px)
